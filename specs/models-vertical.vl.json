{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Продажи по моделям",
  "width": 1200,
  "height": 800,
  "data": {
    "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vSLefpeYHjwgIQtymUOGd_hH9HiUHih3U93I_5I2iDugyc3TgSU2dWckv4Uf9Q8BC7DsuF7_PaZ_VtM/pub?gid=0&single=true&output=csv",
    "format": {
      "type": "csv",
      "parse": {
        "Внутренний номер": "string",
        "Кол-во": "number",
        "Id": "number",
        "Доход за модель грн": "number",
        "Цена закупки грн": "number"
      }
    }
  },
  "transform": [
    {
      "calculate": "parseInt(datum['Кол-во'])",
      "as": "quantity"
    },
    {
      "calculate": "datum['Внутренний номер']",
      "as": "sku"
    },
    {
      "calculate": "parseFloat(datum['Доход за модель грн'])",
      "as": "planed_revenue"
    },
    {
      "calculate": "parseFloat(datum['Цена закупки грн'])",
      "as": "purchase_price"
    },
    {
      "filter": "datum.sku !== ''"
    },
    {
      "lookup": "Id",
      "from": {
        "data": {
          "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vSLefpeYHjwgIQtymUOGd_hH9HiUHih3U93I_5I2iDugyc3TgSU2dWckv4Uf9Q8BC7DsuF7_PaZ_VtM/pub?gid=1769915099&single=true&output=csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "Id",
        "fields": [
          "Дата продажи",
          "Кол-во",
          "Доход грн",
          "Цена за пару(продажи) грн"
        ]
      },
      "as": [
        "sales_date",
        "sales_count_str",
        "real_revenue_str",
        "sales_price_str"
      ]
    },
    {
      "calculate": "parseInt(datum['sales_count_str'])",
      "as": "sales_count"
    },
    {
      "calculate": "parseFloat(datum['real_revenue_str'])",
      "as": "real_revenue"
    },
    {
      "calculate": "parseFloat(datum['sales_price_str'])",
      "as": "sales_price"
    },
    {
      "calculate": "datum.sales_date ? 'Продано': 'В наличии'",
      "as": "sales_status"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "purchase_price",
          "as": "model_purchase_price"
        },
        {
          "op": "sum",
          "field": "sales_price",
          "as": "model_sales_price"
        },
        {
          "op": "sum",
          "field": "quantity",
          "as": "all_quantity"
        },
        {
          "op": "sum",
          "field": "planed_revenue",
          "as": "model_planed_revenue"
        },
        {
          "op": "sum",
          "field": "real_revenue",
          "as": "model_real_revenue"
        }
      ],
      "groupby": [
        "sku",
        "sales_status",
        "planed_revenue",
        "real_revenue",
        "purchase_price",
        "sales_price"
      ]
    }
  ],
  "vconcat": [
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "sku",
              "type": "ordinal",
              "axis": {
                "title": "Модель"
              },
              "sort": null
            },
            "y": {
              "field": "model_purchase_price",
              "type": "quantitative",
              "axis": {
                "title": "Цена"
              }
            },
            "color": {
              "value": "#aec7e8"
            }
          }
        },
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "sku",
              "type": "nominal",
              "axis": {
                "title": "Модель"
              },
              "sort": null
            },
            "y": {
              "field": "model_sales_price",
              "type": "quantitative",
              "axis": {
                "title": "Цена"
              }
            },
            "color": {
              "value": "#18AC94"
            },
            "opacity": {
              "value": 0.35
            }
          }
        }
      ]
    },
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "sku",
          "type": "nominal",
          "axis": {
            "title": "Модель"
          },
          "sort": null
        },
        "y": {
          "field": "all_quantity",
          "type": "quantitative",
          "axis": {
            "title": "Кол-во пар"
          }
        },
        "color": {
          "field": "sales_status",
          "type": "nominal",
          "scale": {
            "domain": [
              "Продано",
              "В наличии"
            ],
            "range": [
              "#18AC94",
              "#aec7e8"
            ]
          },
          "legend": {
            "title": "Cтатус Продаж"
          }
        }
      }
    },
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "sku",
              "type": "nominal",
              "axis": {
                "title": "Модель"
              },
              "sort": null
            },
            "y": {
              "field": "model_planed_revenue",
              "type": "quantitative",
              "axis": {
                "title": "Доход, грн"
              }
            },
            "color": {
              "value": "#aec7e8"
            }
          }
        },
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "sku",
              "type": "nominal",
              "axis": {
                "title": "Модель"
              },
              "sort": null
            },
            "y": {
              "field": "model_real_revenue",
              "type": "quantitative",
              "axis": {
                "title": "Доход, грн"
              },
              "stack": null
            },
            "color": {
              "value": "#18AC94"
            }
          }
        }
      ]
    }
  ]
}
